<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.phoebevu.gorepresent.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/background">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/zipcode"
        android:hint="Enter Zipcode..."
        android:background="#b6866d"
        android:padding="10dp"
        android:layout_above="@+id/currLoc"
        android:layout_alignStart="@+id/textView12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Location"
        android:id="@+id/currLoc"
        android:layout_marginBottom="92dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/zipcode" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="Go"
        android:id="@+id/zipBtt"
        android:background="#562911"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/zipcode" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo2"
        android:layout_above="@+id/zipcode"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="REPRESENT"
        android:id="@+id/textView12"
        android:layout_marginBottom="79dp"
        android:textStyle="bold|italic"
        android:textSize="50dp"
        android:textColor="#352118"
        android:elegantTextHeight="false"
        android:shadowColor="#000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="2.0"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

